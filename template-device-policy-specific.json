{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "iot:Connect"
        ],
        "Resource": [
          "arn:aws:iot:YOUR_REGION:YOUR_ACCOUNT_NUMBER:client/${iot:ClientId}"
        ]
      },
      {
        "Effect": "Allow",
        "Action": [
          "iot:Publish"
        ],
        "Resource": [
          "arn:aws:iot:YOUR_REGION:YOUR_ACCOUNT_NUMBER:topic/truck/freezer",
          "arn:aws:iot:YOUR_REGION:YOUR_ACCOUNT_NUMBER:topic/truck/analyze"
  
        ]
      }
    ]
  }